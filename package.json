{
    "name": "magento2",
    "author": "Magento Commerce Inc.",
    "description": "Magento2 node modules dependencies for local development",
    "license": "(OSL-3.0 OR AFL-3.0)",
    "repository": {
        "type": "git",
        "url": "https://github.com/magento/magento2.git"
    },
    "homepage": "http://magento.com/",
    "devDependencies": {
        "@babel/core": "^7.6.2",
        "@babel/polyfill": "^7.6.0",
        "@babel/preset-env": "^7.6.2",
        "@babel/register": "^7.6.2",
        "@types/imagemin-gifsicle": "^5.2.0",
        "@types/imagemin-jpegtran": "^5.0.0",
        "@types/imagemin-optipng": "^5.2.0",
        "@types/imagemin-svgo": "^7.0.0",
        "@types/less": "^3.0.1",
        "autoprefixer": "~9.6.1",
        "autoprefixer-core": "~6.0.1",
        "browserslist": "~4.6.6",
        "eslint": "^6.0.1",
        "grunt": "~1.0.4",
        "grunt-cli": "~1.3.2",
        "grunt-contrib-clean": "~2.0.0",
        "grunt-contrib-imagemin": "~2.0.1",
        "grunt-contrib-less": "~2.0.0",
        "grunt-contrib-watch": "~1.1.0",
        "grunt-exec": "~3.0.0",
        "imagemin-svgo": "~5.2.1",
        "load-grunt-config": "~3.0.0",
        "path": "~0.12.7",
        "postcss": "~7.0.17",
        "underscore": "^1.9.1"
    },
    "scripts": {
        "mage": "php -dmemory_limit=-1 bin/magento --ansi --no-interaction",
        "app:config:import": "npm run mage -- app:config:import",
        "cache:flush": "npm run mage -- cache:flush",
        "clean:all": "npm run clean:adminhtml && npm run clean:frontend && npm run clean:generated && npm run clean:logs",
        "clean:adminhtml": "rm -rf pub/static/adminhtml && rm -rf var/view_preprocessed",
        "clean:frontend": "rm -rf pub/static/frontend && rm -rf var/view_preprocessed",
        "clean:generated": "rm -rf generated",
        "clean:logs": "rm -rf var/log && rm -rf var/report",
        "cron:run": "npm run mage -- cron:run",
        "dev:source-theme:deploy": "npm run mage -- dev:source-theme:deploy",
        "indexer:reindex": "npm run mage -- indexer:reindex",
        "setup:di:compile": "npm run clean:generated && npm run mage -- setup:di:compile",
        "setup:static-content:deploy": "npm run mage -- setup:static-content:deploy -f en_GB --jobs=4 --theme Sozo/Origin",
        "setup:upgrade": "npm run mage -- setup:upgrade",
        "refresh": "npm run clean:all && npm run cache:flush && npm run setup:upgrade && npm run clean:logs && npm run setup:di:compile && npm run indexer:reindex && npm run setup:static-content:deploy && grunt exec && grunt less"
    }
}
