<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\NegotiableQuote\Block\Customer\Account\Link\Quote"
                   ifconfig="btob/website_configuration/negotiablequote_active"
                   name="customer-account-navigation-quotes-link"
                   cacheable="false">
                <arguments>
                    <argument name="path" xsi:type="string">negotiable_quote/quote</argument>
                    <argument name="label" xsi:type="string" translate="true">My Quotes</argument>
                    <argument name="sortOrder" xsi:type="number">240</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
