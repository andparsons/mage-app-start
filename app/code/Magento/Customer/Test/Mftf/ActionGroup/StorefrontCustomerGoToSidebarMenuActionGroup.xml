<?xml version="1.0" encoding="UTF-8"?>

<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <!-- Go to Address Book -->
    <actionGroup name="StorefrontCustomerGoToSidebarMenu">
        <arguments>
            <argument name="menu" type="string"/>
        </arguments>
        <click selector="{{StorefrontCustomerSidebarSection.sidebarTab(menu)}}" stepKey="goToAddressBook"/>
        <waitForPageLoad stepKey="waitForPageLoad" />
    </actionGroup>
</actionGroups>
