<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="requisition_list"/>
    <body>
        <referenceContainer name="content">
            <referenceBlock name="crosssell.product.addto">
                <block class="Magento\RequisitionList\Block\Catalog\Product\ProductList\Item\AddTo\Requisition"
                       name="crosssell.product.addto.requisition" as="requisition" before="wishlist"
                       ifconfig="btob/website_configuration/requisition_list_active"
                       template="Magento_RequisitionList::catalog/product/list/item/addto/requisition.phtml"/>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
