<?xml version="1.0" encoding="UTF-8"?>

<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StorefrontHomePageTest">
        <annotations>
            <features value="DataServices"/>
            <stories value="Data Services events appear on the Storefront home page"/>
            <title value="Data Services events appear on the Storefront home page"/>
            <description value="Data Services events appear on the Storefront home page"/>
            <severity value="MAJOR"/>
            <group value="dataservices"/>
        </annotations>

        <amOnPage url="/" stepKey="amOnHomePage"/>
        <waitForPageLoad stepKey="waitForPageLoad"/>
        <actionGroup ref="VerifyCMSPageDsDataLayerActionGroup" stepKey="verifyCMSPageDsDataLayer"/>
    </test>
</tests>
