<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="CheckOrderStoreCreditFromStoreFrontActionGroup">
        <arguments>
            <argument name="storeCreditUsed" type="string"/>
        </arguments>
        <!--Check order StoreCredit information from StoreFront-->
        <click selector="{{CheckoutSuccessMainSection.orderLink}}" stepKey="clickOrderLink"/>
        <waitForElement selector="{{StorefrontCustomerOrderViewSection.orderTitle}}" time="30" stepKey="waitForLoadStoreFrontOrderPage"/>
        <see userInput="-${{storeCreditUsed}}.00" selector="{{StorefrontCustomerOrderViewSection.storeCredit}}" stepKey="assertStoreCredit"/>
    </actionGroup>
</actionGroups>
