<?xml version="1.0" ?>
<mapping strict="0">
    <wrapper>order[billing_address]</wrapper>
    <fields>
        <firstname />
        <lastname />
        <company />
        <street>
            <selector>[name='order[billing_address][street][0]']</selector>
        </street>
        <city />
        <country_id>
            <input>select</input>
        </country_id>
        <region_id>
            <input>select</input>
        </region_id>
        <postcode />
        <telephone />
    </fields>
</mapping>
